public class array
{ 
public static void find(int [] numbers)
{ 
int max = numbers[0];
int i;
for (i=1; i<numbers.length; i++)
{ 
if(numbers[i]>max)
{ max=numbers[i]; } 
}
System.out.println("largest in the array is = " + max );
}

public static void main(String[] args)
{
int [] arr ={43,56,89,45,21};
find(arr);
}
}
