import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class CounterApp extends JFrame implements ActionListener {
    private JLabel countLabel;
    private int count = 0;

    public CounterApp() {
        setTitle("Counter Application");
        setSize(300, 200);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLayout(new FlowLayout());
        
        countLabel = new JLabel("Count: " + count);
        countLabel.setFont(new Font("Arial", Font.BOLD, 20));
        add(countLabel);
        
        JButton incrementButton = new JButton("Increment");
        JButton decrementButton = new JButton("Decrement");
        JButton resetButton = new JButton("Reset");
        
        incrementButton.addActionListener(this);
        decrementButton.addActionListener(this);
        resetButton.addActionListener(this);
        
        add(incrementButton);
        add(decrementButton);
        add(resetButton);
    }
    
    @Override
    public void actionPerformed(ActionEvent e) {
        String command = e.getActionCommand();
        if (command.equals("Increment")) {
            count++;
        } else if (command.equals("Decrement")) {
            count--;
        } else if (command.equals("Reset")) {
            count = 0;
        }
        countLabel.setText("Count: " + count);
    }
    
    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            new CounterApp().setVisible(true);
        });
    }
}
